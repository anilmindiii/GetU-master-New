<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_centerInParent="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_full_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/_20sdp">


        <LinearLayout
            android:id="@+id/layout_for_camera"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:src="@drawable/camera_icons"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/_12ssp"
                android:layout_gravity="center"
                android:text="Take new photo"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_for_gallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/layout_for_camera"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:src="@drawable/gallery"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/_12ssp"
                android:layout_gravity="center"
                android:text="Select form gallery"/>

        </LinearLayout>

    </RelativeLayout>


    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/dialog_bg"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo" />

</RelativeLayout>
