<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">


    <android.support.v7.widget.CardView
        android:id="@+id/layout_for_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:elevation="0dp">

        <LinearLayout
            android:id="@+id/layout_for_senderItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sender_bg"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_for_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_light"
                android:text="Chetan Thakur"
                android:layout_gravity="right"
                android:maxWidth="@dimen/_250sdp"
                android:textColor="@color/White"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/tv_for_senderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="7:44 PM"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_for_senderImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_for_senderImage"
                android:layout_width="@dimen/_200sdp"
                android:layout_gravity="right"
                android:layout_height="@dimen/_200sdp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_for_senderTimeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="7:44 PM"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

   <android.support.v7.widget.CardView
        android:id="@+id/layout_for_reciver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <LinearLayout
            android:id="@+id/layout_for_reciverItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/receiver_bg"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_for_reciver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/_250sdp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Hii"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/tv_for_reciverTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="7:44 PM"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_for_reciverImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_for_reciverImage"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_for_reciverTimeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="7:44 PM"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
