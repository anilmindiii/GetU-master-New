<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_300sdp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_centerInParent="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_full_bg"
            android:paddingLeft="@dimen/_20sdp">

            <ImageView
                android:id="@+id/iv_for_cansel"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/close_ico"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="Feedback"
                    android:fontFamily="@font/comicbd_regular"
                    android:textColor="@color/Green"
                    android:textSize="@dimen/_16ssp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/_100sdp"
                    android:text="How was your experience?"
                    android:textColor="@color/darkGrey"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center"
                    android:gravity="center" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_for_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:maxHeight="@dimen/_100sdp"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:background="@null"
                        android:padding="@dimen/_5sdp"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/montserrat_regular"/>


                    <TextView
                        android:layout_below="@+id/et_for_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/grey"/>
                </RelativeLayout>



            </LinearLayout>

            <Button
                android:id="@+id/btn_for_save"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="Submit"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"
                android:textColor="@color/White"
                android:background="@drawable/button_bg_dialog"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/_14ssp"/>

        </RelativeLayout>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/feedback_ico" />

</RelativeLayout>
